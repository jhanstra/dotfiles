{
  // Default font settings
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontSize": 14,
  "editor.lineHeight": 20,
  "editor.fontWeight": "300",
  "workbench.fontAliasing": "default", // antialiased/default/auto
  "editor.fontLigatures": true,

  // Editor Theme
  "workbench.colorTheme": "One Monokai",
  "workbench.iconTheme": "vscode-icons",

  // Terminal
  "terminal.integrated.fontFamily": "FiraCode-Retina",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": 300,
  "terminal.integrated.fontWeightBold": 800,

  // Workspace formatting
  "window.zoomLevel": -1,
  "editor.tabSize": 2,
  "editor.rulers": [100],
  "editor.minimap.enabled": true, // the small code map on the right side of the window
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.detectIndentation": false,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "on",
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.quickSuggestionsDelay": 10,
  "workbench.statusBar.visible": true, // the status bar at the bottom with language info, etc.
  "editor.smoothScrolling": false,
  "editor.renderWhitespace": "none", // turn whitespace dots on/off - none, boundary (when not in between words), all
  "workbench.editor.tabSizing": "shrink", // defines whether tabs show full name or abbreviation - fit/shrink
  "workbench.panel.defaultLocation": "right", // right / bottom
  "breadcrumbs.enabled": true,

  // Vim settings
  "editor.lineNumbers": "relative",
  "vim.easymotion": true,
  "vim.hlsearch": false,
  // Number of lines to scroll with CTRL-U and CTRL-D commands.
  "vim.scroll": 20,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [" "],
      "after": ["leader", "leader", "leader", "b", "d", "w"]
    },
    {}
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "j"],
      "after": ["escape"]
    },
    {}
  ],
  // Auto-editing functionality
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",

  // HTML specific
  "html.format.wrapLineLength": 120,
  "html.format.endWithNewline": true,

  // JS specific
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,

  // Git settings
  "gitlens.keymap": "alternate",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  // Emmet config
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "jade"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "attr_quotes": "single"
    },
    "jsx": {
      "self_closing_tag": true
    }
  },

  // Prettier config
  //"editor.formatOnSave": true, // Turn on for Prettier auto-format

  // Etc
  "vsicons.dontShowNewVersionMessage": true,
  "vim.disableExtension": true,
}