{
  // Default font settings
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontSize": 14,
  "editor.lineHeight": 20,
  "editor.fontWeight": "300",
  "workbench.fontAliasing": "default", // antialiased/default/auto
  "editor.fontLigatures": true,
  // Editor Theme
  "workbench.colorTheme": "Shades of Purple",
  "workbench.iconTheme": "vscode-icons",
  // Terminal
  "terminal.integrated.fontFamily": "FiraCode-Retina",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.fontWeightBold": "800",
  // Workspace formatting
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.zoomLevel": 0,
  "editor.tabSize": 2,
  "editor.rulers": [
    100
  ],
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.detectIndentation": false,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.quickSuggestionsDelay": 10,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "[markdown]": {
    "editor.quickSuggestions": false
  },
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "top",
  "workbench.statusBar.visible": true, // the status bar at the bottom with language info, etc.
  "editor.smoothScrolling": false,
  "editor.renderWhitespace": "none", // turn whitespace dots on/off - none, boundary (when not in between words), all
  "workbench.editor.tabSizing": "shrink", // right / bottom
  "breadcrumbs.enabled": true,
  // File List
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true
  },
  // Vim settings
  "editor.lineNumbers": "relative",
  "vim.easymotion": true,
  "vim.hlsearch": false,
  "vim.sneak": true,
  // Number of lines to scroll with CTRL-U and CTRL-D commands.
  "vim.scroll": 20,
  "vim.handleKeys": {
    "<C-k>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        " "
      ],
      "after": [
        "<leader>",
        "<leader>",
        "<leader>",
        "b",
        "d",
        "w"
      ]
    },
    {
      "before": [
        "U"
      ],
      "after": [
        "C-r"
      ]
    },
  ],
  "vim.insertModeKeyBindingsNonRecursive": [],
  // Auto-editing functionality
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  // HTML specific
  "html.format.wrapLineLength": 120,
  "html.format.endWithNewline": true,
  // JS specific
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  // ESLint
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  // Emmet config
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "jade"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "attr_quotes": "single"
    },
    "jsx": {
      "self_closing_tag": true
    }
  },
  "beautify.language": {
    "html": [
      "html",
      "php",
      "erb"
    ],
    "css": [],
    "js": []
  },
  // Prettier config
  //"editor.formatOnSave": true, // Turn on for Prettier auto-format
  // Etc
  "vsicons.dontShowNewVersionMessage": true,
  "editor.acceptSuggestionOnEnter": "off",
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "workbench.activityBar.visible": false,
  "workbench.list.keyboardNavigation": "simple",
  "editor.suggest.localityBonus": true,
  "php.suggest.basic": false,
  "files.hotExit": "onExitAndWindowClose",
  "spotify.showSignInButton": false,
  "spotify.showNextButton": false,
  "spotify.showSignOutButton": false,
  "spotify.showPlayPauseButton": false,
  "spotify.showMuteUnmuteVolumeButton": false,
  "spotify.showPreviousButton": false,
  "spotify.showToggleShufflingButton": true,
  "spotify.showLyricsButton": false,
  "editor.wordWrap": "on",
}